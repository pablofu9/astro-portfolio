---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource-variable/onest';
import Background from '../components/Backgound.astro';
import Backgound from '../components/Backgound.astro';
interface Props {
	title: string;
	description: string;
}

const { description,title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="px-4">
		<div class="background-container">
			<Background />
		</div>
		<div class="relative h-full w-full ">
		<Header />
		<slot />
		<Footer />
		</div>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
		scroll-behavior: smooth;
	}
	html {
		font-family: "Onest Variable", system-ui, sans-serif;
	}

	body {
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-height: 100vh; /* Ensure the body takes the full height of the viewport */
	}

	.background-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1; /* Ensure the background is behind other content */
    pointer-events: none; /* Ensure the background does not interfere with user interactions */
  }

  .background-svg {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Cover the entire area */
  }


</style>

